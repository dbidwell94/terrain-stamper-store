{
  "compilerOptions": {
    "target": "ES6",                         
    "module": "CommonJS",                    
    "strict": true,                          
    "esModuleInterop": true,                 
    "skipLibCheck": true,                     
    "forceConsistentCasingInFileNames": true,
    "lib": ["ES2017"],
    "outDir": "./dist",
    "rootDir": ".",
    "baseUrl": "./",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "noImplicitAny": true,
    "experimentalDecorators": true,
    "preserveConstEnums": true,
    "strictPropertyInitialization": false,
  }
}
