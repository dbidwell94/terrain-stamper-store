{
  "compilerOptions": {
    "target": "ES2017",                         
    "module": "commonjs",                    
    "strict": true,                          
    "esModuleInterop": true,                 
    "skipLibCheck": true,                     
    "forceConsistentCasingInFileNames": true,
    "lib": ["ES2017"],
    "outDir": "./dist",
    "rootDir": ".",
    "baseUrl": "./",
    "paths": {
      "controllers/*": [
        "./src/controllers/*"
      ],
      "models/*": [
        "./src/models/*"
      ],
      "utils/*": [
        "./src/utils/*"
      ],
      "services/*": [
        "./src/services/*"
      ],
      "src/*": [
        "./src/*"
      ]
    },
    "emitDecoratorMetadata": true,
    "noImplicitAny": true,
    "experimentalDecorators": true,
    "preserveConstEnums": true,
    "strictPropertyInitialization": false,
  }
}
