{
  "compilerOptions": {
    "target": "ES2017",                         
    "module": "commonjs",                    
    "strict": true,                          
    "esModuleInterop": true,                 
    "skipLibCheck": true,                     
    "forceConsistentCasingInFileNames": true,
    "lib": ["ES2017"],
    "outDir": "dist",
    "rootDir": "src",
    "emitDecoratorMetadata": true,
    "noImplicitAny": true,
    "experimentalDecorators": true,
  }
}
